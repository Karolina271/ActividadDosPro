      "source": [
        "# Definir los productos y sus precios\n",
        "productos = {\n",
        "    \"Arroz\": {\"cantidad\": 1, \"precio\": 5000},\n",
        "    \"Azucar\": {\"cantidad\": 2, \"precio\": 3000},\n",
        "    \"Papa\": {\"cantidad\": 1, \"precio\": 2000}\n",
        "}\n",
        "\n",
        "# Mostrar los productos y sus precios\n",
        "print(\"Lista de productos:\")\n",
        "total = 0\n",
        "for producto, detalles in productos.items():\n",
        "    subtotal = detalles[\"cantidad\"] * detalles[\"precio\"]\n",
        "    total += subtotal\n",
        "    print(f\"{detalles['cantidad']} kilo(s) de {producto} - Precio: ${detalles['precio']} - Subtotal: ${subtotal}\")\n",
        "\n",
        "# Mostrar el total\n",
        "print(\"Total a pagar:\", total)"
      ]
    },
